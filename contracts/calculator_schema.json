{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Calculator Request",
    "type": "object",
    "properties": {
        "a": {
            "type": "number"
        },
        "b": {
            "type": "number"
        },
        "operation": {
            "type": "string",
            "enum": [
                "add",
                "subtract"
            ]
        }
    },
    "required": [
        "a",
        "b",
        "operation"
    ]
}